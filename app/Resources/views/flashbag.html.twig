{# app/Resources/views/flashbag.html.twig #}

{% for label, flashes in app.session.flashbag.all() %}{% for flash in flashes %}
	<div class="alert {% if label == 'error' %}alert-danger{% elseif label == 'notice' %}alert-info{% else %}alert-{{ label }}{% endif %} alert-dismissable">
		<a type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</a>
		{{ flash }}
	</div>
{% endfor %}{% endfor %}