{# app/Resources/views/flashbag.html.twig #}

{% for label, flashes in app.session.flashbag.all() %}{% for flash in flashes %}
	<div class="alert {% if label == 'error' %}alert-danger{% else %}{% if label == 'notice' %}alert-info{% else %}alert-{{ label }}{% endif %} alert-dismissable{% endif %}">
		{% if label != 'error' %}<a type="button" class="close" data-dismiss="alert" aria-label="{{ 'close'|trans }}" aria-hidden="true">&times;</a>{% endif %}
		{{ flash }}
	</div>
{% endfor %}{% endfor %}