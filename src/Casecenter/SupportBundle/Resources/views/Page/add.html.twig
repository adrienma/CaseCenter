{# src/Casecenter/SupportBundle/Resources/views/Page/add.html.twig #}

{% extends "CasecenterSupportBundle::layout.html.twig" %}

{% block head_title %}{{ 'page.new.label'|trans }} - {{ support.name }} - {{ 'support.singular'|trans }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}add{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('support_index') }}">{{ 'support.plural'|trans }}</a></li>
	<li><a href="{{ path('support_view', {'slug': support.slug}) }}">{{ support.name }}</a></li>
	<li class="active">{{ 'page.new.label'|trans }}</li>
{% endblock %}

{% block header_title %}
	{{ parent() }} <span>/</span> {{ 'support.singular'|trans }} <span>:</span> {{ support.name }} 
{% endblock %}

{% block body %}
	<h3>{{ 'page.new.title'|trans({'%support%': support.name}) }}</h3>

	<form method="post" action="{{ path('support_page_add', {'slug': support.slug}) }}" {{ form_enctype(form) }}>
		{{ form_widget(form) }}

		<div class="form-group">
			<input type="submit" class="btn btn-primary" value="{{ 'form.add.btn'|trans }}" />
			<a href="{{ path('support_view', {'slug': support.slug}) }}" class="btn btn-default btn-sm">{{ 'form.btn.cancel'|trans }}</a>
		</div>
	</form>
{% endblock %}