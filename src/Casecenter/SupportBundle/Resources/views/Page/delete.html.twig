{# src/Casecenter/SupportBundle/Resources/views/Page/delete.html.twig #}

{% extends "CasecenterSupportBundle::layout.html.twig" %}

{% block head_title %}{{ page.name }} - {{ page.support.name }} - {{ 'support.singular'|trans }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}delete{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('support_index') }}">{{ 'support.plural'|trans }}</a></li>
	<li><a href="{{ path('support_view', {'slug': page.support.slug}) }}">{{ page.support.name }}</a></li>
	<li><a href="{{ path('support_page_view', {'slugSupport': page.support.slug, 'slugPage': page.slug}) }}">{{ page.name }}</a></li>
	<li class="active">{{ 'page.delete.label'|trans }}</li>
{% endblock %}

{% block header_title %}
	{{ parent() }} <span>/</span> {{ 'support.singular'|trans }} <span>:</span> {{ page.support.name }} <span>:</span> {{ page.name }}
{% endblock %}

{% block body %}
	<h3>{{ 'page.delete.label'|trans }}</h3>
	
	<form method="post" action="{{ path('support_page_delete', {'slugSupport': page.support.slug, 'slugPage': page.slug}) }}">
		<p>{{ 'page.delete.paragraph'|trans({'%name%': page.name}) }}</p>
		<p><b>{{ 'form.delete.irreversible'|trans() }}</b></p>

		<div class="checkbox"><label><input type="checkbox" name="delete" value="true" required /> {{ 'form.delete.confirmation'|trans }}</label></div>

		<input type="submit" class="btn btn-danger" value="{{ 'form.delete.btn'|trans }}" /> <a href="{{ path('support_page_view', {'slugSupport': page.support.slug, 'slugPage': page.slug}) }}" class="btn btn-default btn-sm">{{ 'form.btn.cancel'|trans }}</a>
	</form>
{% endblock %}