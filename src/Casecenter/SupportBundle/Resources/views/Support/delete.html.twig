{# src/Casecenter/SupportBundle/Resources/views/Support/delete.html.twig #}

{% extends "CasecenterSupportBundle::layout.html.twig" %}

{% block head_title %}{{ support.name }} - {{ 'support.singular'|trans }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}delete{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('support_index') }}">{{ 'support.plural'|trans }}</a></li>
	<li><a href="{{ path('support_view', {'slug': support.slug}) }}">{{ support.name }}</a></li>
	<li class="active">{{ 'support.delete.label'|trans }}</li>
{% endblock %}

{% block header_title %}
	{{ parent() }} <span>/</span> {{ 'support.singular'|trans }} <span>:</span> {{ support.name }}
{% endblock %}

{% block body %}
	<h3>{{ 'support.delete.label'|trans }}</h3>
	
	<form method="post" action="{{ path('support_delete', {'slug': support.slug}) }}">
		<p>{{ 'support.delete.paragraph'|trans({'%name%': support.name}) }}</p>
		<p><b>{{ 'form.delete.irreversible'|trans }}</b></p>

		<div class="checkbox"><label><input type="checkbox" name="delete" value="true" required /> {{ 'form.delete.confirmation'|trans }}</label></div>

		<input type="submit" class="btn btn-danger" value="{{ 'form.delete.btn'|trans }}" /> <a href="{{ path('support_view', {'slug': support.slug}) }}" class="btn btn-sm btn-default">{{ 'form.btn.cancel'|trans }}</a>
	</form>
{% endblock %}