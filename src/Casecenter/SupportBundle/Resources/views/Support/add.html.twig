{# src/Casecenter/SupportBundle/Resources/views/Support/add.html.twig #}

{% extends "CasecenterSupportBundle::layout.html.twig" %}

{% block head_title %}{{ 'support.new.label'|trans }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}add{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('support_index') }}">{{ 'support.plural'|trans }}</a></li>
	<li class="active">{{ 'support.new.label'|trans }}</li>
{% endblock %}

{% block header_title %}{{ parent() }} <span>/</span> {{ 'support.singular'|trans }}{% endblock %}

{% block body %}
	<h3>{{ 'support.new.label'|trans }}</h3>

	<form method="post" action="{{ path('support_add') }}" {{ form_enctype(form) }}>
		{{ form_widget(form) }}

		<div class="form-group">
			<input type="submit" class="btn btn-primary" value="{{ 'form.add.btn'|trans }}" />
			<a href="{{ path('support_index') }}" class="btn btn-default btn-sm">{{ 'form.btn.cancel'|trans }}</a>
		</div>
	</form>
{% endblock %}