{# src/Casecenter/AdministrationBundle/Resources/views/Settings/index.html.twig #}

{% extends "CasecenterAdministrationBundle::layout.html.twig" %}

{% block head_title %}{{ 'admin.settings.title'|trans }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}settings index{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('administration_index') }}">{{ 'Administration'|trans }}</a></li>
	<li class="active">{{ 'admin.settings.title'|trans }}</li>
{% endblock %}

{% block header_title %}{{ parent() }} <span>/</span> {{ 'Administration'|trans }} <span>:</span> {{ 'admin.settings.title'|trans }}{% endblock %}

{% block body %}
	<form method="post" action="{{ path('administration_settings') }}" class="form-horizontal">
		<div class="form-group">
			<label for="register" class="col-sm-2 control-label">{{ 'admin.settings.register'|trans }}</label>
			<div class="col-sm-10"><input type="checkbox" name="register" id="register" /></div>
		</div>
		<div class="form-group"><div class="col-sm-offset-2 col-sm-10">
			<input type="submit" class="btn btn-primary" value="{{ 'form.btn.save'|trans }}" />
		</div></div>
	</form>
{% endblock %}