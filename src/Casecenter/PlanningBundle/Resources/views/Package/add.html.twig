{# src/Casecenter/PlanningBundle/Resources/views/Package/add.html.twig #}

{% extends "CasecenterPlanningBundle::layout.html.twig" %}

{% block head_title %}{{ 'package.new.label'|trans }} - {{ planning.name }} - {{ 'Administration'|trans }} - {{ parent() }}{% endblock %}

{% block body_class %}{{ parent() }}admin add{% endblock %}

{% block breadcrumb %}
	{{ parent() }}
	<li><a href="{{ path('administration_index') }}">{{ 'Administration'|trans }}</a></li>
	<li><a href="{{ path('planning_index') }}">{{ 'planning.plural'|trans }}</a></li>
	<li><a href="{{ path('planning_edit', {'slug': planning.slug}) }}">{{ planning.name }}</a></li>
	<li class="active">{{ 'package.new.label'|trans }}</li>
{% endblock %}

{% block header_title %}{{ parent() }} <span>/</span> {{ 'planning.singular'|trans }}{% endblock %}

{% block body %}
	<h3>{{ 'package.new.label'|trans }}</h3>

	<form method="post" action="{{ path('package_add', {'slug': planning.slug}) }}" {{ form_enctype(form) }}>
		{{ form_widget(form) }}

		<div class="form-group">
			<input type="submit" class="btn btn-primary" value="{{ 'form.add.btn'|trans }}" />
			<a href="{{ path('planning_edit', {'slug': planning.slug}) }}" class="btn btn-default btn-sm">{{ 'form.btn.cancel'|trans }}</a>
		</div>
	</form>
{% endblock %}